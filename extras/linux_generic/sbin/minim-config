[ $(id -u) != "0" ] && exec sudo "$0"

service hostapd stop
service dnsmasq stop
service wpa_supplicant stop
service unum stop

killall -9 hostapd dnsmasq wpa_supplicant unum

rfkill unblock wifi

/opt/unum/extras/sbin/config_interfaces.sh
/opt/unum/extras/sbin/config_hostapd.sh
/opt/unum/extras/sbin/config_dnsmasq.sh
/opt/unum/extras/sbin/config_routing.sh

. /etc/opt/unum/extras.conf.sh

ifconfig "$ifname_lan" down
ip link set wlan0 address "$hwaddr_lan"
ifconfig "$ifname_lan" up

sleep 1

service hostapd start
sleep 1
service dnsmasq start
sleep 1
service unum start
sleep 1

systemctl enable unum
systemctl enable hostapd
systemctl enable dnsmasq
