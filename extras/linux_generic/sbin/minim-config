[ $(id -u) != "0" ] && exec sudo "$0"

service hostapd stop 
service dnsmasq stop 
service wpa_supplicant stop 
service unum stop 

killall -9 hostapd dnsmasq wpa_supplicant unum 

rfkill unblock wifi 

rm -f /var/opt/unum/unum.key /var/opt/unum/unum.pem

/opt/unum/extras/sbin/config_interfaces.sh
/opt/unum/extras/sbin/config_hostapd.sh
/opt/unum/extras/sbin/config_dnsmasq.sh
/opt/unum/extras/sbin/config_routing.sh

. /etc/opt/unum/extras.conf.sh

ifconfig "$ifname_lan" down
ip link set wlan0 address "$hwaddr_lan"
ifconfig "$ifname_lan" up

sleep 1

systemctl disable unum
systemctl disable hostapd
systemctl disable dnsmasq

seems_to_be_running() {
    local chk=$(ps aux | grep "$1")
    if [[ -z "$chk" ]]; then
        return 1
    fi
    return 0
}
start_retry() {
    local -i tries=0
    while (( tries < 3 )) && ! seems_to_be_running "$1"; do
        service "$1" start
        sleep 1
        (( tries += 1 ))
    done
    return 0
}

start_retry hostapd
start_retry dnsmasq
start_retry unum
